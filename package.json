{
  "name": "@hubspot/serverless-dev-runtime",
  "version": "5.4.1-beta.0",
  "description": "A tool for testing HubSpot CMS serverless functions locally",
  "main": "index.js",
  "repository": "https://github.com/HubSpot/serverless-dev-runtime",
  "license": "Apache-2.0",
  "dependencies": {
    "@hubspot/local-dev-lib": "1.13.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "moment": "^2.29.4",
    "table": "^6.8.1",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "husky": "^1.3.1",
    "lint-staged": "^10.5.4",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "lint": "eslint . && prettier --list-different ./**/*.{js,json}",
    "prettier:write": "prettier --write ./**/*.{js,json}"
  },
  "lint-staged": {
    "**/*.{js,scss,css}": [
      "prettier -l",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
